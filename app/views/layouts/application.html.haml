!!!
%html{ :lang => 'en-GB' }
  %head
    %title 
      =yield :title
      Eurogamer 2009 Scores Analysis
    %meta{ :charset => "utf-8" }
    = stylesheet_link_tag 'reset', 'text', '960', 'eurogamer2009'
    = javascript_include_tag "http://use.typekit.com/nhi0bgm.js"
    = javascript_include_tag 'jquery-1.3.2.min'
    = javascript_include_tag 'application'
    = yield :javascript
  %body
    .top
      .container_12
        .grid_12
          .grid_6.alpha
            %h1= link_to "Eurogamer 2009 Scores Analysis", root_path
          .grid_6.omega
            %p.grid_2.alpha=link_to "Reviews", root_path
            %p.grid_2=link_to "Writers", writers_path
            %p.grid_2.omega=link_to "Scores", scores_path
      = cleardiv
      
    .container_12
      .grid_12
        = yield
        = cleardiv
      = cleardiv
    #footer-container
      .footer-inner
        %p
          = link_to "Code", "http://github.com/infovore/eurogamer2009"
          &copy;
          = link_to "Tom Armitage", "http://infovore.org"
          2010.
          Not in any way affiliated or connected with
          = link_to "Eurogamer.", "http://eurogamer.net"
          = link_to "Find out more.", about_path
          = render "/layouts/analytics"